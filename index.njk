{% block content %}
    <h1 class="govuk-heading-xl">GOV.UK Frontend Rounded</h1>
    <p class="govuk-body">Rounded corners for GOV.UK Frontend, useful when branding the GOV.UK Design System.</p>
    <p class="govuk-body">This example shows corners of 10px in radius.</p>
    <p class="govuk-body">See the <a href="https://github.com/NickColley/govuk-frontend-rounded#install">README for installation instructions</a>.</p>
    <h2 class="govuk-heading-l">Button</h2>
    {{ govukButton({
        text: "Save and continue"
    }) }}

    <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">

    <h2 class="govuk-heading-l">Checkboxes</h2>
    {{ govukInsetText({
      text: "Checkboxes are restricted to how round they can be to avoid them looking like radios."
    }) }}
    {{ govukCheckboxes({
        idPrefix: "waste",
        name: "waste",
        fieldset: {
            legend: {
            text: "Which types of waste do you transport?",
            classes: "govuk-fieldset__legend--m"
            }
        },
        hint: {
            text: "Select all that apply."
        },
        items: [
            {
            value: "electronics",
            text: "Waste from electronics"
            },
            {
            value: "mines",
            text: "Waste from mines or quarries"
            },
            {
            value: "farm",
            text: "Farm or agricultural waste"
            }
        ]
    }) }}

    <h2 class="govuk-heading-m">Small checkboxes</h2>

    {{ govukCheckboxes({
        idPrefix: "organisation",
        name: "organisation",
        classes: "govuk-checkboxes--small",
        fieldset: {
            legend: {
            text: "Organisation"
            }
        },
        items: [
            {
            value: "hmrc",
            text: "HM Revenue and Customs (HMRC)"
            },
            {
            value: "employment-tribunal",
            text: "Employment Tribunal"
            },
            {
            value: "MOD",
            text: "Ministry of Defence"
            },
            {
            value: "DfT",
            text: "Department for Transport"
            }
        ]
        }) }}

    <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">

    <h2 class="govuk-heading-l">Error summary</h2>
    {{ govukErrorSummary({
        disableAutoFocus: true,
        titleText: "There is a problem",
        errorList: [
            {
            text: "The date your passport was issued must be in the past",
            href: "#passport-issued-day"
            },
            {
            text: "Enter a postcode, like AA1 1AA",
            href: "#postcode-input"
            }
        ]
    }) }}

    <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">

    <h2 class="govuk-heading-l">File upload</h2>
    {{ govukFileUpload({
        id: "file-upload-1",
        name: "file-upload-1",
        label: {
            text: "Upload a file"
        }
    }) }}

    <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">

    <h2 class="govuk-heading-l">Notification banner</h2>
    {% set html %}
        <p class="govuk-notification-banner__heading">
            You have 7 days left to send your application.
            <a class="govuk-notification-banner__link" href="#">View application</a>.
        </p>
    {% endset %}

    {{ govukNotificationBanner({
        html: html
    }) }}
    
    <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">
    
    <h2 class="govuk-heading-l">Pagination</h2>
    {{ govukPagination({
        previous: {
            href: "#"
        },
        next: {
            href: "#"
        },
        items: [
            {
            number: 1,
            href: "#"
            },
            {
            number: 2,
            current: true,
            href: "#"
            },
            {
            number: 3,
            href: "#"
            }
        ]
    }) }}

    <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">

    <h2 class="govuk-heading-l">Panel</h2>
    {{ govukPanel({
        titleText: "Application complete",
        html: "Your reference number<br><strong>HDJ2123F</strong>"
    }) }}

    <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">

    <h2 class="govuk-heading-l">Select</h2>
